---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <h1 class="text-3xl font-bold text-center text-gray-800 my-6">Test Astro et Plot (Observablehq)</h1>
    <div id="myplot" class="flex justify-center items-center bg-gray-100 p-6 rounded-lg shadow-md"></div>
</Layout>

<script>
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";

const plot = Plot.plot({
    marks: [
        Plot.dot(penguins, {
            x: "culmen_length_mm",
            y: "culmen_depth_mm",
            stroke: "species",
        }),
    ],
    style: {
        background: "white",
        fontFamily: "Arial, sans-serif",
    },
});
const div = document.querySelector("#myplot");
div.append(plot);
</script>